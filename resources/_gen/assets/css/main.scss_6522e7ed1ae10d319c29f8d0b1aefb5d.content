  height: 420px;
  overflow: hidden;
  border-radius: 10px;
  z-index: 50;
  box-shadow: 0 0 10px 5px var(--color-hover-shadow);
}

#share-weixin img {
  filter: none !important;
}

#share-weixin.active {
